<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <!-- CATEGORIE 1 : Restaurants -->
    <LinearLayout
        android:id="@+id/category_restaurants"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/categorie_bg">

            <ImageView
                android:id="@+id/category_icon_restaurants"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_restaurant"
                app:tint="@color/blanc"
                android:contentDescription="Restaurants"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/category_text_restaurants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:textSize="12sp"
            android:textColor="@color/noir"
            android:gravity="center"
            android:maxLines="2"/>
    </LinearLayout>

    <!-- CATEGORIE 2 : Événements -->
    <LinearLayout
        android:id="@+id/category_events"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/categorie_bg">

            <ImageView
                android:id="@+id/category_icon_events"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_event"
                app:tint="@color/blanc"
                android:contentDescription="Événements"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/category_text_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Événements"
            android:textSize="12sp"
            android:textColor="@color/noir"
            android:gravity="center"
            android:maxLines="2"/>
    </LinearLayout>

    <!-- CATEGORIE 3 : Endroits touristiques -->
    <LinearLayout
        android:id="@+id/category_places"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/categorie_bg">

            <ImageView
                android:id="@+id/category_icon_places"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_place"
                app:tint="@color/blanc"
                android:contentDescription="Endroits touristiques"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/category_text_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="Places"
            android:textColor="@color/noir"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
