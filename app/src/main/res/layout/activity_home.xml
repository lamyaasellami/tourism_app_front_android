<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_clair">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation_bar"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:background="@color/vert_fonce">

        <LinearLayout
            android:id="@+id/header_text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Découvrir"
                android:textColor="@color/blanc"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marrakech, Maroc"
                android:textColor="@color/beige_clair"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- SEARCH BAR -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/header_text_container"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_input"
            android:drawableEnd="@drawable/ic_filtre"
            android:drawablePadding="10dp"
            android:hint="Rechercher destinations, hôtels..."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textColor="@color/noir"
            android:textColorHint="@color/gris_texte"/>

        <ImageView
            android:id="@+id/chaticon"
            android:layout_width="55dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/chatbot" />
    </RelativeLayout>



            <!-- CONTENU -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-24dp"
                android:padding="20dp">

                <!-- MAP CARD -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:importantForAccessibility="no"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <!-- CATEGORIES (à créer plus tard) -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <include layout="@layout/category_item" android:id="@+id/cat_monuments" />
                    <!--<include layout="@layout/category_item" android:id="@+id/cat_hotels" />
                    <include layout="@layout/category_item" android:id="@+id/cat_restaurants" />
                    <include layout="@layout/category_item" android:id="@+id/cat_transport" />-->
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp">

                    <!-- Texte principal à gauche -->
                    <TextView
                        android:id="@+id/tv_populaire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Populaire près de vous"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/noir"
                        android:layout_alignParentStart="true"/>

                    <!-- "Voir tout" à droite -->
                    <TextView
                        android:id="@+id/tv_voir_tout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voir tout"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/vert_fonce"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
